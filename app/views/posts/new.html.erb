<%= form_with scope: :post, url: post_path, method: :post do |form| %>
  <div style="margin-bottom: 15px;">
    <%= form.label :title, "Title", style: "font-weight: bold;" %>
    <%= form.text_field :title, style: "width: 100%; padding: 8px; border-radius: 4px; border: 1px solid #ccc;" %>
  </div>
  
  <div style="margin-bottom: 15px;">
    <%= form.label :text, "Text", style: "font-weight: bold;" %>
    <%= form.text_field :text, style: "width: 100%; height: 100px; padding: 8px; border-radius: 4px; border: 1px solid #ccc;" %>
  </div>
  
  <%= form.submit "Create", style: "background-color: #daad86; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;" %>
<% end %>

