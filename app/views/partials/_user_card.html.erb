<%= link_to "/users/#{user.id}", class: 'user-nav-link' do %>
    <div class='user-card'>
       <img class='user-photo' src='<%= user.photo %>' alt='profile picture' />
        <div class="user-info">
            <h2><%= user.name %></h2>
            <p>Number of posts: <%= user.posts_counter %></p>
        </div>
    </div>
<% end %>